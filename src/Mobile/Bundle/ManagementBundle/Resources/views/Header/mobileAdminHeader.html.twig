<nav class="menu">
    
    {% include "MobileManagementBundle:Header:NavMenu.html.twig" %} 
    
    <a class="toggle-nav-search tnavi" href="#">{{ 'menu.search.search'| trans}}</a>
    <a class="toggle-nav-by-category tnavi" href="#">{{ 'menu.navigate_by_category'| trans}}</a>
   
    <div class="menuItems navi active">
        <ul>
            <li class="current-item">
                <a href="{{ path('mobile_admin', { 'page': 0}) }}">
                    {{ 'menu.home'| trans}}
