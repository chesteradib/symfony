            <li>
                <a href="{{ path('mobile_item_new', { 'page': 0}) }}">
                    {{ 'menu.new_article'| trans}}
                </a>
            </li>
            <li>
                <a href="#">
                    {{ 'menu.my_settings'| trans}}
                </a>
            </li>
            <li>
                <a href="{{ path('mobile_all_my_network', { 'page': 0}) }}">
                    {{ 'left.all_my_network.all_my_network'| trans}}
                </a>
                <span class="notification-counter notification-counter-my_followers"
                      {% if number_of_follows_not_seen < 1 %}
                       style="display:none"
                      {% endif%}
                      >
                {% if number_of_follows_not_seen > 0 %}
                        {{number_of_follows_not_seen}}
                {% endif%}
                </span>
            </li>
            <li>
                <a href="{{ path('mobile_all_my_followeds', { 'page': 0}) }}">
                    {{ 'left.all_my_followeds.all_my_followeds'| trans}}
                </a>
            </li>
            <li>
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
