{% for new_poster in all_new_posters_and_related_data %}
        <div class="my_network_item left-item-container">
            <a href="{{{ path('mobile_shop_show', { 'shop_id' : new_poster['item'].id , 'page' : 0})}}"
               class="show_shop users"
               >
                {% if new_poster['item'].getProfilePicture %}
                    <div class="image_of_follower m-i-p-p-u-d {% if new_poster['item'].getProfilePicture.widthVsHeight == 2%}center-horizontally{% endif%}">
                        {% set createdAt = new_poster['item'].getCreatedAt %}
                        {% set image_url = 'pp/'~createdAt|date('Y')~'/'
                            ~createdAt|date('m')~'/'
                            ~new_poster['item'].getProfilePicture.path %}
                            {% if new_poster['item'].getProfilePicture.widthVsHeight == 0 %}
                            <img class="m-i-p-p-u photo equal" src="{{ asset(image_url) }}" height= 25/>
                            {% elseif new_poster['item'].getProfilePicture.widthVsHeight == 1 %}
                            <span class="helper"></span>
                            <img class="m-i-p-p-u photo fat-profile-image" src="{{ asset(image_url) }}" height= 25/>
                            {% elseif new_poster['item'].getProfilePicture.widthVsHeight == 2 %}
                            <img class="m-i-p-p-u photo tall-profile-image" src="{{ asset(image_url) }}" height= 25/>
                            {% endif%}
                    </div>
                {% else %}
                    <div class="image_of_follower m-i-p-p-u-d center-horizontally">
                        <img class="photo equal" src="{{ asset('pp/index.png') }}"/>
                    </div>
                {% endif %}
                
                <div class="initial_info_of_follower">
                    <div class="username_of_follower">
                        {{new_poster['item'].username}}
                    </div><div class="domain_name_of_follower">
                        {% if new_poster['number_of_followers'] >=0%}{{new_poster['number_of_followers']}} {{ 'global.follower'| trans}}{% if new_poster['number_of_followers'] >1%}s{%endif%}{%endif%}
                    </div>  
                    <div class="number_of_articles_of_follower">
                        {% if new_poster['number_of_articles'] >=0%}{{new_poster['number_of_articles']}} {{ 'global.article'| trans}}{% if new_poster['number_of_articles'] >1%}s{%endif%}{%endif%}
                    </div>
                </div>
            </a>

            <div class="clear"></div>
        </div>
{% endfor %}
